<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F8B6B6"
        android:layout_margin="5sp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên sách :"
            android:textSize="20sp"
            android:layout_marginLeft="5sp" />

        <EditText
            android:id="@+id/edtATenSach"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_margin="5sp"
            android:background="@drawable/khung"
            android:inputType="text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giá thuê"
            android:textSize="20sp"
            android:layout_marginLeft="5sp" />

        <EditText
            android:id="@+id/edtAgiaThue"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_margin="5sp"
            android:background="@drawable/khung"/>
        <Spinner
            android:id="@+id/spnMaLoai"
            android:layout_width="match_parent"
            android:layout_height="50sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnASach"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginRight="50sp"
                android:background="@drawable/baseline_save_as_24" />

            <Button
                android:id="@+id/btnACancelS"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="@drawable/baseline_cancel_24" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>