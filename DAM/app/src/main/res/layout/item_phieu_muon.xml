<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lnlDelete"
        android:layout_marginBottom="10sp"
        android:background="@drawable/khung3"
        android:layout_margin="5sp"
        >
        <LinearLayout
            android:layout_width="400sp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="2sp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="1sp"
                >
                <TextView
                    android:id="@+id/txtMaPhieuMuon"
                    android:layout_width="200sp"
                    android:textSize="17sp"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/txtMaTTPM"
                    android:layout_width="200sp"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:inputType="text" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="1sp"
                >
                <TextView
                    android:id="@+id/txtMaTVPM"
                    android:layout_width="200sp"
                    android:textSize="17sp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/txtMaSachPM"
                    android:layout_width="200sp"
                    android:textSize="17sp"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtNgayPM"
                    android:layout_width="200sp"
                    android:textSize="17sp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/txtTraSachPM"
                    android:layout_width="200sp"
                    android:textSize="17sp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtTenSach"
                android:layout_width="match_parent"
                android:textSize="17sp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1sp"/>

            <TextView
                android:id="@+id/txtTenTV"
                android:layout_width="300sp"
                android:textSize="17sp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1sp"/>
            <TextView
                android:id="@+id/txtTenTT"
                android:layout_width="300sp"
                android:textSize="17sp"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="1sp"
                >
                <TextView
                    android:id="@+id/txtTienThuePM"
                    android:layout_width="350sp"
                    android:textSize="17sp"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/btnDeletePhieuMuon"
                    android:layout_width="30dp"
                    android:layout_height="33dp"
                    android:background="@drawable/baseline_delete_24"
                    android:layout_gravity="end"
                    />
            </LinearLayout>


            <Button
                android:id="@+id/btnTraSach"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:background="@drawable/item_button"
                android:text="Trả sách"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>