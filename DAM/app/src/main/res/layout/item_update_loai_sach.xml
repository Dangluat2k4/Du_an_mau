<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F8B6B6"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mã loại sách"
            android:textSize="20sp"
            android:layout_marginLeft="5sp"

            />
        />

        <EditText
            android:id="@+id/edtUDMaLS"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_margin="5sp"
            android:background="@drawable/khung" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên loại sách :"
            android:textSize="20sp"
            android:layout_marginLeft="5sp"
            />

        <EditText
            android:id="@+id/edtUDTenLS"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_margin="5sp"
            android:background="@drawable/khung"
            android:inputType="text" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnUDLS"
                android:layout_width="40sp"
                android:layout_height="45sp"
                android:layout_gravity="center"
                android:layout_marginRight="50sp"
                android:background="@drawable/baseline_save_as_24" />

            <Button
                android:id="@+id/btnUDACancelLS"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="@drawable/baseline_cancel_24" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>