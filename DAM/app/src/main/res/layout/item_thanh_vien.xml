<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lnlDelete"
        android:layout_marginBottom="10sp"
        android:background="@drawable/khung3"
        android:layout_margin="5sp"
        >
        <LinearLayout
            android:layout_width="340sp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="2sp"
            android:layout_gravity="center"
            >
            <TextView
                android:id="@+id/txtMaTV"
                android:layout_width="300sp"
                android:textSize="17sp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtTenTV"
                android:layout_width="300sp"
                android:textSize="17sp"
                android:layout_height="wrap_content"
                android:inputType="text" />
            <TextView
                android:id="@+id/txtNamSinh"
                android:layout_width="300sp"
                android:textSize="17sp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <Button
                android:id="@+id/btnDeleteTV"
                android:layout_width="30dp"
                android:layout_height="33dp"
                android:layout_marginBottom="5sp"
                android:background="@drawable/baseline_delete_24"/>

            <Button
                android:id="@+id/btnUPdateTV"
                android:layout_width="30dp"
                android:layout_height="33dp"
                android:background="@drawable/baseline_security_update_24" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>